<UserControl x:Class="ODExplorer.Controls.NotificationSettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ODExplorer.Controls"
             xmlns:viewvms="clr-namespace:ODExplorer.ViewModels.ViewVMs"
             xmlns:models="clr-namespace:ODExplorer.Models"
             d:DataContext="{d:DesignInstance Type=viewvms:DisplaySettingsViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="800"
             d:DesignWidth="800">
    <GroupBox Header="Notification Options"
              BorderBrush="{DynamicResource PrimaryBorder}"
              Margin="5"
              BorderThickness="0.5">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Size"
                       VerticalAlignment="Center"
                       Margin="5,10" />

            <StackPanel Grid.Row="0"
                        Grid.Column="1"
                        Margin="5"
                        Orientation="Horizontal">

                <Button Style="{StaticResource CartoSelectionBtn}"
                        ToolTip="Small"
                        Width="150"
                        Height="84"
                        Margin="10"
                        Command="{Binding SetSmallNotifications}">
                    <Image Source="/Resources/Notification Small.png"
                           Stretch="Uniform"
                           SnapsToDevicePixels="True"
                           UseLayoutRounding="True"
                           Margin="2"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                </Button>

                <Button Style="{StaticResource CartoSelectionBtn}"
                        ToolTip="Medium"
                        Width="150"
                        Height="84"
                        Margin="10"
                        Command="{Binding SetMediumNotifications}">
                    <Image Source="/Resources/Notification Bottom Right.png"
                           Stretch="Uniform"
                           SnapsToDevicePixels="True"
                           UseLayoutRounding="True"
                           Margin="2"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                </Button>

                <Button Style="{StaticResource CartoSelectionBtn}"
                        ToolTip="Medium"
                        Width="150"
                        Height="84"
                        Margin="10"
                        Command="{Binding SetLargeNotifications}">
                    <Image Source="/Resources/Notification Large.png"
                           Stretch="Uniform"
                           SnapsToDevicePixels="True"
                           UseLayoutRounding="True"
                           Margin="2"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                </Button>
            </StackPanel>

            <TextBlock Text="Position"
                       Grid.Row="1"
                       VerticalAlignment="Center"
                       Margin="5,10" />

            <StackPanel Grid.Row="1"
                        Grid.Column="1"
                        Margin="5"
                        Orientation="Horizontal">

                <Button Style="{StaticResource CartoSelectionBtn}"
                        ToolTip="Small"
                        Width="150"
                        Height="84"
                        Margin="10"
                        Command="{Binding SetNotifyPositionBottomRight}">
                    <Image Source="/Resources/Notification Bottom Right.png"
                           Stretch="Uniform"
                           SnapsToDevicePixels="True"
                           UseLayoutRounding="True"
                           Margin="2"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                </Button>

                <Button Style="{StaticResource CartoSelectionBtn}"
                        ToolTip="Medium"
                        Width="150"
                        Height="84"
                        Margin="10"
                        Command="{Binding SetNotifyPositionTopRight}">
                    <Image Source="/Resources/Notification Top Right.png"
                           Stretch="Uniform"
                           SnapsToDevicePixels="True"
                           UseLayoutRounding="True"
                           Margin="2"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                </Button>

                <Button Style="{StaticResource CartoSelectionBtn}"
                        ToolTip="Medium"
                        Width="150"
                        Height="84"
                        Margin="10"
                        Command="{Binding SetNotifyPositionTopLeft}">
                    <Image Source="/Resources/Notification Top Left.png"
                           Stretch="Uniform"
                           SnapsToDevicePixels="True"
                           UseLayoutRounding="True"
                           Margin="2"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                </Button>

                <Button Style="{StaticResource CartoSelectionBtn}"
                        ToolTip="Medium"
                        Width="150"
                        Height="84"
                        Margin="10"
                        Command="{Binding SetNotifyPositionBottomLeft}">
                    <Image Source="/Resources/Notification Bottom Left.png"
                           Stretch="Uniform"
                           SnapsToDevicePixels="True"
                           UseLayoutRounding="True"
                           Margin="2"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center" />
                </Button>
            </StackPanel>

            <TextBlock Text="Duration (Seconds)"
                       VerticalAlignment="Center"
                       Margin="0,10"
                       Grid.Row="2" />

            <local:SliderWithValue Minimum="1"
                                   Maximum="60"
                                   Margin="10"
                                   Grid.Row="2"
                                   Grid.Column="1"
                                   Value="{Binding NotificationDuration}" />

            <TextBlock Text="Max Notifcations"
                       Margin="0,10"
                       VerticalAlignment="Center"
                       Grid.Row="3" />

            <local:SliderWithValue Minimum="1"
                                   Maximum="30"
                                   Margin="10"
                                   Grid.Row="3"
                                   Grid.Column="1"
                                   Value="{Binding MaxNotificationCount}" />

            <TextBlock Text="X Offset (Pixels)"
                       Margin="0,10"
                       VerticalAlignment="Center"
                       Grid.Row="4" />

            <local:SliderWithValue Minimum="0"
                                   Maximum="500"
                                   Margin="10"
                                   Grid.Row="4"
                                   Grid.Column="1"
                                   Value="{Binding XOffset}" />

            <TextBlock Text="Y Offset (Pixels)"
                       Margin="0,10"
                       VerticalAlignment="Center"
                       Grid.Row="5" />

            <local:SliderWithValue Minimum="0"
                                   Maximum="500"
                                   Margin="10"
                                   Grid.Row="5"
                                   Grid.Column="1"
                                   Value="{Binding YOffset}" />

            <CheckBox Content="Enable Notifications"
                      Grid.Row="10"
                      Grid.ColumnSpan="2"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Bottom"
                      Margin="0,0,0,30"
                      Style="{DynamicResource CheckBoxStyle}"
                      IsThreeState="False"
                      IsChecked="{Binding EnableNotifications}" />
            <StackPanel Orientation="Horizontal"
                        Margin="10"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Grid.Row="10"
                        Grid.Column="1">
                <Button Content="Test"
                        Margin="10"
                        FontSize="18"
                        Height="40"
                        Width="120"
                        Command="{Binding TestNotificationCommand}" />

                <Button Content="Set Defaults"
                        Margin="10"
                        FontSize="18"
                        Height="40"
                        Width="120"
                        Command="{Binding SetNotificationDefaults}" />

                <Button Content="Save Settings"
                        Margin="10"
                        FontSize="18"
                        Height="40"
                        Width="120"
                        Command="{Binding SaveNotificationSettings}" />
            </StackPanel>
        </Grid>
    </GroupBox>
</UserControl>
